<?xml version="1.0" encoding="UTF-8" ?> <!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="zhang.mapper.CarMapper">
    <resultMap id="CarResultMap" type="zhang.pojo.Car">
        <id column="id" property="id"/>
        <result column="car_type" property="carType"/>
        <result column="car_code" property="carCode"/>
        <result column="car_price" property="carPrice"/>
        <result column="car_imgs"   property="carImgs"  typeHandler="zhang.typeHandler.ListToStringTypeHandler" javaType="List"/>
        <!--<result column="car_imgs"   property="carImgs" jdbcType="VARCHAR" javaType="List"/>--><!--也可以-->
    </resultMap>

    <!--
    jdbcType="VARCHAR"javaType="List"
    jdbcType="VARCHAR" typeHandler="zhang.typeHandler.ListToStringTypeHandler"
    #{carImgs,javaType=List,jdbcType=VARCHAR}
    -->
     <insert id="saveCar" parameterType="zhang.pojo.Car">
        insert into car(car_type,car_code,car_price,car_imgs)
        values
        (
        #{carType},#{carCode},#{carPrice},#{carImgs}
        )
     </insert>
</mapper>